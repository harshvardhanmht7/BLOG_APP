
<%  @articles.each do |art|  %>
<div class="article-container">


    <div class="card text-center" style="width: 60rem;height:20rem;margin-left:250px;">
      <div class="card-header">
        by <%=art.user.username%>
          </div>
                    <div class="card-body">

                    <h1>   <%=link_to art.title,article_path(art.id),method: :get %> </h1>
                      <p class="card-text"><%= art.description %></p>

                       <%=link_to 'delete',article_path(art.id),method: :delete,class:"btn btn-primary" %>
                       <%=link_to 'show',article_path(art.id),method: :get,class:"btn btn-primary" %>
                       <%=link_to 'edit',edit_article_path(art.id),method: :get,class:"btn btn-primary" %>
                    </div>
          <div class="card-footer text-muted">
      created at :  <%=time_ago_in_words(art.created_at)%> ago   &nbsp &nbsp updated at:<%=time_ago_in_words(art.updated_at)%> ago
      </div>
    </div>

  </div>

<%end%>
